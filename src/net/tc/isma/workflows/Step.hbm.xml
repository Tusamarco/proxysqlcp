<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="net.tc.isma.workflows.stepImpl"  table="ISMA_STEPS">

    <composite-id>
      <key-property column="APPLICATION" length="255" name="application" type="string"/>
      <key-property column="MODULE" length="255" name="module" type="string"/>
      <key-property column="ID_WF" length="18" name="idWf" type="long"/>
      <key-property column="ID_STEP" length="18" name="idStep" type="long"/>

    </composite-id>
    <property column="NAME_EN" length="255" name="nameEn" type="string"/>
    <property column="NAME_FR" length="255" name="nameFr" type="string"/>
    <property column="NAME_ES" length="255" name="nameEs" type="string"/>
    <property column="NAME_AR" length="255" name="nameAr" type="string"/>
    <property column="NAME_ZH" length="255" name="nameZh" type="string"/>

    <!--set name="roles" lazy="false" >
      <jcs-cache usage="read-write"/>
      <key>
        <column name="APPLICATION"/>
        <column name="MODULE"/>
        <column name="ID_WF"/>
        <column name="ID_STEP"/>
      </key>
      <one-to-many class="net.tc.isma.auth.security.Role"/>

  </set-->

    <!--set name="roles" table="ISMA_STEPS_X_ROLES" lazy="false" >
      <jcs-cache usage="read-write"/>
      <key>
        <column name="APPLICATION"/>
        <column name="MODULE"/>
        <column name="ID_WF"/>
        <column name="ID_STEP"/>
      </key>
      <many-to-many column="ROLE" class="net.tc.isma.auth.security.Role" outer-join="false" />

  </set-->

</class>
</hibernate-mapping>
